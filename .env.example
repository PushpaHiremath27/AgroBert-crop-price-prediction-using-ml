# ==============================================
# AgroBERT Environment Configuration
# Copy this file to .env and fill in your values
# ==============================================

# Application Environment
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production
PORT=5000
PYTHONUNBUFFERED=1

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///./data/agrobert.db
# For PostgreSQL in production (Render):
# DATABASE_URL=postgresql://user:password@hostname:5432/dbname

# API Keys
DATA_GOV_API_KEY=your_data_gov_api_key_here
AGMARK_RESOURCE_ID=your_agmarknet_resource_id_here
WEATHER_API_KEY=your_openweathermap_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Agmarknet Configuration
AGMARK_CACHE_PATH=data/raw/agmark_cache.json
AGMARK_CACHE_TTL_SECONDS=3600
AGMARK_MAX_RETRIES=3
AGMARK_TIMEOUT_SECONDS=10

# Weather Configuration
WEATHER_API_ENDPOINT=https://api.openweathermap.org/data/2.5

# News Scraper Configuration
NEWS_CACHE_TTL_SECONDS=7200
MAX_NEWS_ARTICLES=20

# ML Model Configuration
MODEL_PATH=models/
DATA_PATH=data/processed/

# CORS Configuration (for production)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agrobert.log

# Email Configuration (for notifications, optional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=admin@agrobert.com

# Redis Configuration (for caching, optional)
# REDIS_URL=redis://localhost:6379/0
